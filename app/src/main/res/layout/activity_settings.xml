<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="161dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/ProfileImageDim"
                android:layout_height="@dimen/ProfileImageDim"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/profile_img"
                android:padding="5dp"
                app:shapeAppearanceOverlay="@style/Circular"
                app:strokeColor="@android:color/holo_blue_light"
                app:strokeWidth="5dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/ll_margin_top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:text="@string/user_name"
                android:textColor="@color/black"
                android:textSize="@dimen/textUserNameSize"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/service"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView17"
                style="@style/StyleProfile"
                android:text="full name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editable_name"
                    android:ems="10"
                    android:inputType="textPersonName"
                    style="@style/StylePlainText"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:text="VICTOR NUCULICI" />

                <TextView
                    android:id="@+id/full_name"
                    style="@style/StyleProfileValues"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:text="VICTOR NUCULICI" />

                <TextView
                    android:id="@+id/edit_name"
                    style="@style/StyleEdit"
                    android:text="Edit" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                style="@style/StyleProfile"
                android:text="@string/city" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editable_city"
                    android:ems="10"
                    android:inputType="textPersonName"
                    style="@style/StylePlainText"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:text="@string/cityName" />

                <TextView
                    android:id="@+id/city"
                    style="@style/StyleProfileValues"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:text="@string/cityName" />

                <TextView
                    android:id="@+id/edit_city"
                    style="@style/StyleEdit"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                style="@style/StyleProfile"
                android:text="@string/phone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editable_phone"
                    android:ems="10"
                    android:inputType="textPersonName"
                    style="@style/StylePlainText"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent"
                    android:text="@string/phoneValue" />

                <TextView
                    android:id="@+id/phone"
                    style="@style/StyleProfileValues"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent"
                    android:text="@string/phoneValue" />

                <TextView
                    android:id="@+id/edit_phone"
                    style="@style/StyleEdit" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                style="@style/StyleProfile"
                android:text="email" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editable_email"
                    android:ems="10"
                    android:inputType="textPersonName"
                    style="@style/StylePlainText"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:text="@string/emailValue" />

                <TextView
                    android:id="@+id/email"
                    style="@style/StyleProfileValues"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:text="@string/emailValue" />

                <TextView
                    android:id="@+id/edit_email"
                    style="@style/StyleEdit"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView9"
                style="@style/StyleProfile"
                android:text="@string/serviceName" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editable_profession"
                    android:ems="10"
                    android:inputType="textPersonName"
                    style="@style/StylePlainText"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:text="@string/service"  />

                <TextView
                    android:id="@+id/profession"
                    style="@style/StyleProfileValues"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:text="@string/service" />

                <TextView
                    android:id="@+id/edit_profession"
                    style="@style/StyleEdit" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView12"
                style="@style/StyleProfile"
                android:layout_height="31dp"
                android:text="@string/descriptionOfService" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editable_description"
                    android:ems="10"
                    android:inputType="textPersonName"
                    style="@style/StylePlainText"
                    android:layout_height="87dp"
                    android:paddingRight="40dp"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:text="@string/description" />

                <TextView
                    android:id="@+id/description"
                    style="@style/StyleProfileValues"
                    android:layout_height="87dp"
                    android:paddingRight="40dp"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:text="@string/description" />

                <TextView
                    android:id="@+id/edit_description"
                    android:layout_gravity="center_vertical"
                    style="@style/StyleEdit" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>