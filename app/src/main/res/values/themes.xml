<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Khadamat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_main_color</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>

        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Circular">
        <item name="cornerSize" > 50% </item>
    </style>
    <style name="StyleProfile">
        <item name="android:gravity" > center_vertical</item>
        <item name="android:paddingLeft" > @dimen/textViewPaddingLeft</item>
        <item name="android:layout_height" > @dimen/textViewHeight</item>
        <item name="android:layout_width" > match_parent</item>

    </style>
    <style name="StyleProfileValues">
        <item name="android:gravity" > center_vertical</item>
        <item name="android:paddingLeft" > @dimen/textViewPaddingLeft</item>
        <item name="android:layout_height" > @dimen/textViewHeight</item>
        <item name="android:layout_width" > match_parent</item>
        <item name="android:textColor" >@color/black</item>
        <item name="android:textSize" >@dimen/textSizeProfileValues</item>
        <item name="android:textStyle" >bold</item>
    </style>
    <style name="StyleEdit" >
        <item name="android:onClick">edit</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">Edit</item>
        <item name="android:textColor">@color/design_default_color_primary</item>

    </style>

    <style name="StylePlainText" >
        <item name="android:visibility">gone</item>
        <!--        <item name="android:starStyle">@style/StyleProfileValues</item>-->
        <item name="android:gravity" > center_vertical</item>
        <item name="android:paddingLeft" > @dimen/textViewPaddingLeft</item>
        <item name="android:paddingBottom" > 0dp</item>
        <item name="android:layout_height" > @dimen/textViewHeight</item>
        <item name="android:layout_width" > match_parent</item>
        <item name="android:textColor" >@color/black</item>
        <item name="android:textSize" >@dimen/textSizeProfileValues</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:background" >@color/white</item>

    </style>
</resources>